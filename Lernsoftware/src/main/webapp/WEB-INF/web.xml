<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns="http://java.sun.com/xml/ns/javaee" xmlns:web="http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd" xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_3_0.xsd" version="3.0">
  <display-name>Lernsoftware</display-name>
  <session-config>
    <session-timeout>90</session-timeout>
  </session-config>
  <servlet>
    <servlet-name>index</servlet-name>
    <servlet-class>de.adv_boeblingen.seegerj.amed.lernsoftware.view.RootRedirectServlet</servlet-class>
  </servlet>
  <servlet>
    <servlet-name>applet</servlet-name>
    <servlet-class>de.adv_boeblingen.seegerj.amed.lernsoftware.view.AppletServlet</servlet-class>
  </servlet>
  <servlet>
    <servlet-name>image</servlet-name>
    <servlet-class>de.adv_boeblingen.seegerj.amed.lernsoftware.view.ImageServlet</servlet-class>
  </servlet>
  <servlet>
    <servlet-name>lesson</servlet-name>
    <servlet-class>de.adv_boeblingen.seegerj.amed.lernsoftware.view.LessonServlet</servlet-class>
  </servlet>
  <servlet>
    <servlet-name>login</servlet-name>
    <servlet-class>de.adv_boeblingen.seegerj.amed.lernsoftware.view.LoginServlet</servlet-class>
  </servlet>
  <servlet>
    <servlet-name>logout</servlet-name>
    <servlet-class>de.adv_boeblingen.seegerj.amed.lernsoftware.view.LogoutServlet</servlet-class>
  </servlet>
  <servlet>
    <servlet-name>quiz</servlet-name>
    <servlet-class>de.adv_boeblingen.seegerj.amed.lernsoftware.view.QuizServlet</servlet-class>
  </servlet>
  <servlet>
    <servlet-name>stat</servlet-name>
    <servlet-class>de.adv_boeblingen.seegerj.amed.lernsoftware.view.StatServlet</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>index</servlet-name>
    <url-pattern>/index_ignored</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
    <servlet-name>applet</servlet-name>
    <url-pattern>/Applet/*</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
    <servlet-name>image</servlet-name>
    <url-pattern>/Image/*</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
    <servlet-name>lesson</servlet-name>
    <url-pattern>/Lesson/*</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
    <servlet-name>login</servlet-name>
    <url-pattern>/login</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
    <servlet-name>logout</servlet-name>
    <url-pattern>/Logout</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
    <servlet-name>quiz</servlet-name>
    <url-pattern>/Quiz/*</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
    <servlet-name>stat</servlet-name>
    <url-pattern>/Stats/*</url-pattern>
  </servlet-mapping>
  <filter>
    <filter-name>AnalyticsFilter</filter-name>
    <filter-class>de.adv_boeblingen.seegerj.amed.lernsoftware.filter.AnalyticsFilter</filter-class>
  </filter>
  <filter>
    <filter-name>ApplicationFilter</filter-name>
    <filter-class>de.adv_boeblingen.seegerj.amed.lernsoftware.filter.ApplicationFilter</filter-class>
  </filter>
  <filter>
    <filter-name>LoginFilter</filter-name>
    <filter-class>de.adv_boeblingen.seegerj.amed.lernsoftware.filter.LoginFilter</filter-class>
  </filter>
  <filter>
    <filter-name>NavigationFilter</filter-name>
    <filter-class>de.adv_boeblingen.seegerj.amed.lernsoftware.filter.NavigationFilter</filter-class>
  </filter>
  <filter>
    <filter-name>StateFilter</filter-name>
    <filter-class>de.adv_boeblingen.seegerj.amed.lernsoftware.filter.StateFilter</filter-class>
  </filter>
  <filter-mapping>
    <filter-name>AnalyticsFilter</filter-name>
    <url-pattern>/Quiz/*</url-pattern>
  </filter-mapping>
  <filter-mapping>
    <filter-name>AnalyticsFilter</filter-name>
    <url-pattern>/Lesson/*</url-pattern>
  </filter-mapping>
  <filter-mapping>
    <filter-name>AnalyticsFilter</filter-name>
    <url-pattern>/Stats/*</url-pattern>
  </filter-mapping>
  <filter-mapping>
    <filter-name>ApplicationFilter</filter-name>
    <url-pattern>/*</url-pattern>
  </filter-mapping>
  <filter-mapping>
    <filter-name>LoginFilter</filter-name>
    <url-pattern>/Lesson/*</url-pattern>
  </filter-mapping>
  <filter-mapping>
    <filter-name>LoginFilter</filter-name>
    <url-pattern>/Quiz/*</url-pattern>
  </filter-mapping>
  <filter-mapping>
    <filter-name>LoginFilter</filter-name>
    <url-pattern>/Stats</url-pattern>
  </filter-mapping>
    <filter-mapping>
    <filter-name>NavigationFilter</filter-name>
    <url-pattern>/Lesson/*</url-pattern>
  </filter-mapping>
  <filter-mapping>
    <filter-name>NavigationFilter</filter-name>
    <url-pattern>/Quiz/*</url-pattern>
  </filter-mapping>
  <filter-mapping>
    <filter-name>NavigationFilter</filter-name>
    <url-pattern>/Stats</url-pattern>
  </filter-mapping>
  <filter-mapping>
    <filter-name>StateFilter</filter-name>
    <url-pattern>/Quiz/*</url-pattern>
  </filter-mapping>
  <listener>
    <listener-class>de.adv_boeblingen.seegerj.amed.lernsoftware.misc.EntityManagerFactoryHelper</listener-class>
  </listener>
  <welcome-file-list>
    <welcome-file>index_ignored</welcome-file>
  </welcome-file-list>
</web-app>